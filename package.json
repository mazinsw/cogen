{
  "name": "@mazinsw/cogen",
  "version": "2.4.3",
  "description": "A code generator from SQL to any language",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mazinsw/cogen.git"
  },
  "keywords": [
    "code",
    "generator",
    "sql",
    "modeling",
    "template",
    "cli",
    "terminal",
    "console",
    "parser",
    "command-line",
    "entity"
  ],
  "author": "Francimar Alves <mazinsw@gmail.com>",
  "license": "MIT",
  "main": "./dist/main/main.js",
  "bin": {
    "cogen": "dist/main/cli.js"
  },
  "scripts": {
    "clean": "rimraf coverage dist tmp",
    "build": "tsc -d -p tsconfig.release.json && tsc-alias -p tsconfig.release.json",
    "build:watch": "tsc -w -p tsconfig.release.json",
    "lint": "tslint -t stylish --project \"tsconfig.json\"",
    "style:fix": "prettier --write \"src/**/*.ts\"",
    "style:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "cogen": "ts-node ./src/main/cli.ts",
    "test:cover": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk=9229 node_modules/.bin/jest -i",
    "grammar": "yarn grammar:sql && yarn grammar:template",
    "grammar:sql": "yarn grammar:sql:lexer && yarn grammar:sql:parser",
    "grammar:template": "yarn grammar:template:lexer && yarn grammar:template:parser",
    "grammar:run": "antlr4ts -encoding UTF-8 -listener -no-visitor -package grammar",
    "grammar:sql:lexer": "yarn grammar:run src/grammar/SQLLexer.g4",
    "grammar:sql:parser": "yarn grammar:run src/grammar/SQLParser.g4",
    "grammar:template:lexer": "yarn grammar:run src/grammar/TemplateLexer.g4",
    "grammar:template:parser": "yarn grammar:run src/grammar/TemplateParser.g4",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "antlr4ts": "^0.5.0-alpha.4",
    "chardet": "^2.1.0",
    "iconv-lite": "^0.7.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "antlr4ts-cli": "^0.5.0-alpha.4",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "tsutils": "^3.21.0",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
